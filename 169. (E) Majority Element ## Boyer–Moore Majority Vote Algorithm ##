class Solution {
public:
    int majorityElement(vector<int>& nums) {
        sort(nums.begin(), nums.end());
        int mid = nums.size() / 2;
        if(nums[0] == nums[mid]) return nums[0];
        return nums[mid];
    }
};

#######################################

class Solution {
public:
    int majorityElement(vector<int>& nums) {
        //[Boyerâ€“Moore majority vote alg]
        int id = 0, count = 1;
        for(int i = 1; i < nums.size(); i++) {
            if(nums[id] == nums[i]) {
                count++;
            } else {
                count--;
            }
            if(count == 0) {
                id = i;
                count = 1;
            }
        }
        return nums[id];
    }
};
